<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity$PlaceholderFragment"
    android:background="@android:color/holo_green_light">

    <TextView
        android:text="@string/person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:src="@drawable/al"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/heightTextView"
        android:text="@string/person_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:textSize="24dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
      />
    <TextView
        android:id="@+id/birthdayTextView"
        android:text="@string/person_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="italic"
        android:layout_below="@+id/heightTextView"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/movieTextView"
        android:text="@string/person_favorite_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="italic"
        android:layout_below="@+id/birthdayTextView"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"/>

</RelativeLayout>
